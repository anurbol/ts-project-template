{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "max-file-line-count": [
            true,
            70
        ],
        // https://basarat.gitbooks.io/typescript/docs/tips/defaultIsBad.html
        "no-default-export": true,
        "no-require-imports": true,
        "arrow-parens": false,
        "quotemark": [
            true,
            "single"
        ],
        "interface-over-type-literal": false,
        "array-type": false
    },
    "rulesDirectory": []
}